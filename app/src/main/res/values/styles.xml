<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorCarolineBlue</item>
        <item name="colorPrimaryDark">@color/colorDazzledBlue</item>
        <item name="colorAccent">@color/colorPatricksBlue</item>
    </style>

    <style name="editTextContainer" >
        <item name="android:background">@drawable/container_edit_text</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="textViewPrimary" >
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textViewSecondary" >
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textViewMini" >
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
